#!/bin/bash

t=${1:-3}

echo "*** starting foo service in $t seconds***"
sleep $t
m="Waiting for data..."

rm -f /tmp/foo.fifo && mkfifo /tmp/foo.fifo
echo $m
systemd-notify --ready --status=$m

while : ; do
    read a </tmp/foo.fifo
    systemd-notify --status="Processing $a"
    echo "Read from FIFO: $a"
    if [ ${a:0:1} == "q" ]; then
        exit 0
    fi
    systemd-notify --status="Waiting for data..."
done
